__lua__
local player

function _init()
    player = {
        x = 10,
        y = 10,
        color = 8,
		name = "dude",
		speed = 1.5,
		draw=function(self)
			spr(1, self.x,self.y)
		end,
		update=function(self)
			if btn(1) then 
				self.x += self.speed 
			end
			if btn(0) then
				self.x -= self.speed  
			end
			if btn(3) then 
				self.y += self.speed 
			end
			if btn(2) then
				self.y -= self.speed 
			end
		end
    }
end

function _update()
	player:update()
end

function _draw()
	cls()
	player:draw()
end

